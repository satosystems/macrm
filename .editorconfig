root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 8
insert_final_newline = true
trim_trailing_whitespace = true

[*.hs]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_size = 4
indent_style = tab
